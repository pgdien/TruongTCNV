        </div>

        @*Logo, tên trường*@
        <div class="col-md-12 Mid">
            <div class="col-md-7 col-sm-12 col-xs-12 left">
                <div class="col-md-2 col-sm-4 col-xs-4 Logo">
                    <img src="~/img/Logo.jpg" class="img-responsive" width="100%" />
